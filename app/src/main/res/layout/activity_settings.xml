<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:id="@+id/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="48dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"/>

        <!-- Section: Service -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service"
            android:textColor="?attr/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="8dp"/>

        <!-- Item: Enable Service -->
        <LinearLayout
            android:id="@+id/item_service_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            android:background="?attr/selectableItemBackground">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enable Service"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface"/>
                
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switch_master"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Section: Permissions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/perm_cat_title"
            android:textColor="?attr/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Item: Notification Access -->
        <LinearLayout
            android:id="@+id/item_notification_perm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            android:background="?attr/selectableItemBackground">
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/perm_read_notif"
                    android:textSize="18sp"
                    android:textColor="?attr/colorOnSurface"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/perm_read_notif_desc"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"/>
            </LinearLayout>
                
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switch_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"/>
        </LinearLayout>

        <!-- Item: Post Notification Permission -->
        <LinearLayout
            android:id="@+id/item_post_notification_perm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            android:background="?attr/selectableItemBackground">
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/perm_post_notif"
                    android:textSize="18sp"
                    android:textColor="?attr/colorOnSurface"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/perm_post_notif_desc"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"/>
            </LinearLayout>
                
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switch_post_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorOutlineVariant"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="8dp"/>

        <!-- Section: Appearance -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_header_appearance"
            android:textColor="?attr/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Item: Language -->
        <LinearLayout
            android:id="@+id/item_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            android:background="?attr/selectableItemBackground">
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_language"
                    android:textSize="18sp"
                    android:textColor="?attr/colorOnSurface"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_current_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>

        <!-- Item: Follow System Theme -->
        <LinearLayout
            android:id="@+id/item_theme_follow_system"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            android:background="?attr/selectableItemBackground">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/settings_theme_follow_system"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface"/>
                
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switch_theme_follow_system"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Item: Dark Mode -->
        <LinearLayout
            android:id="@+id/item_theme_dark_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            android:background="?attr/selectableItemBackground">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/settings_theme_dark_mode"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface"/>
                
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switch_theme_dark_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Item: Pure Black -->
        <LinearLayout
            android:id="@+id/item_theme_pure_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            android:background="?attr/selectableItemBackground">
            
            <LinearLayout
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:orientation="vertical">
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_theme_pure_black"
                    android:textSize="18sp"
                    android:textColor="?attr/colorOnSurface"/>
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_theme_pure_black_desc"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"/>
            </LinearLayout>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switch_theme_pure_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Item: Dynamic Colors -->
        <LinearLayout
            android:id="@+id/item_theme_dynamic_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            android:background="?attr/selectableItemBackground">
            
            <LinearLayout
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:orientation="vertical">
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_theme_dynamic_color"
                    android:textSize="18sp"
                    android:textColor="?attr/colorOnSurface"/>
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_theme_dynamic_color_desc"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"/>
            </LinearLayout>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switch_theme_dynamic_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Section: General -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_general_header"
            android:textColor="?attr/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>
            
        <!-- Item: Whitelist -->
        <LinearLayout
            android:id="@+id/item_whitelist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            android:background="?attr/selectableItemBackground">
            
            <LinearLayout
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:orientation="vertical">
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_general_whitelist"
                    android:textSize="18sp"
                    android:textColor="?attr/colorOnSurface"/>
            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_music_note"
                app:tint="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>

        <!-- Item: Battery -->
        <LinearLayout
            android:id="@+id/item_battery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            android:background="?attr/selectableItemBackground">
            
            <LinearLayout
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:orientation="vertical">
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ignore Battery Optimization"
                    android:textSize="18sp"
                    android:textColor="?attr/colorOnSurface"/>
            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_music_note"
                app:tint="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>

        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorOutlineVariant"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="8dp"/>

        <!-- Section: Help & Guide -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help"
            android:textColor="?attr/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Item: 0-Hook Guide -->
        <LinearLayout
            android:id="@+id/item_guide_0_hook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            android:background="?attr/selectableItemBackground">
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_guide_item"
                    android:textSize="18sp"
                    android:textColor="?attr/colorOnSurface"/>
            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_help"
                app:tint="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>

        <!-- Section: About -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:textColor="?attr/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>
            
        <!-- Item: GitHub -->
        <LinearLayout
            android:id="@+id/item_github"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            android:background="?attr/selectableItemBackground">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GitHub Repository"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface"/>
        </LinearLayout>
        
        <!-- Item: Logs -->
        <LinearLayout
            android:id="@+id/item_logs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            android:visibility="gone"
            android:background="?attr/selectableItemBackground">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Log Console"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface"/>
        </LinearLayout>

        <!-- Footer: Version Info -->
        <TextView
            android:id="@+id/tv_footer_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="v..."
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
